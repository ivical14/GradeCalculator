<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.gradecalculator.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GradME!"
        android:textColor="@android:color/black"
        android:layout_marginTop="82dp"
        tools:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/logo_text_view"
        android:layout_marginBottom="50sp"/>

    <Button
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calculate_button"
        android:layout_below="@+id/logo_text_view"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/load_button"
        android:layout_below="@+id/calculate_button"
        android:layout_alignLeft="@+id/calculate_button"
        android:layout_alignStart="@+id/calculate_button"
        android:layout_alignRight="@+id/calculate_button"
        android:layout_alignEnd="@+id/calculate_button" />

    <Button
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/settings_button"
        android:layout_below="@+id/load_button"
        android:layout_alignRight="@+id/load_button"
        android:layout_alignEnd="@+id/load_button"
        android:layout_alignLeft="@+id/load_button"
        android:layout_alignStart="@+id/load_button" />

    <Button
        android:text="Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/exit_button"
        android:layout_alignRight="@+id/settings_button"
        android:layout_alignEnd="@+id/settings_button"
        android:layout_alignLeft="@+id/settings_button"
        android:layout_alignStart="@+id/settings_button"/>
</RelativeLayout>
